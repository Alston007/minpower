#!/bin/bash
dir=$1

if [ -d "$dir" ]; then
    #run minpower solve on the directory
    echo 'solving directory:' $dir
    python -c "from minpower import solve; solve.problem('$dir')"
else
    #try a test case with the input name
    echo 'solving testcase:' $dir
    python -c "from minpower.tests import test; test.problem('$dir')"
fi